.banner image{
    width: 100%;
    height: 400rpx;
}
.list-box{
    padding: 30rpx 20rpx;
}
.newest-list{
    display: inline-block;
    width: 347rpx;
    height: 374rpx;
    margin:0 15rpx 10rpx 0;
    border-radius: 10px;
    text-align: center;
    background: #f5f6f5;
}
.newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-list image{
    width: 180rpx;
    height: 180rpx;
    margin: 30rpx 0 20rpx;
}
 
 .group-list{
    width: 100%;
    height: 1000rpx;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    padding-left: 5rpx;
    padding-top: 10rpx;
    position: absolute;
}

 .title{
    font-size: 30rpx;
    color: #808080;
    padding-left: 20rpx;
    margin-top: 10rpx;
}
.price{
    font-size: 30rpx;
    color: red;
    padding-left: 20rpx;
    margin-top: 8rpx;
}
.num{
    font-size: 30rpx;
    padding-left: 15rpx;
    margin-top: -37rpx;
    color: #cccccc;
}