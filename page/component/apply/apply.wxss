@import '../../common/common.wxss';

.container{  
display: flex; /*or inline-flex*/  
flex-direction: row;  
flex-wrap:wrap
}  


#panel{
  height:65vh;
  background:#fff;
}

#panel text{
  line-height: 13vh;
  border-right: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
}

.flex-row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.flex-column{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
}

.flex-cell{
  flex: 1;
}

.button{  
  margin: 10px;
  color: white;
  /* background: green; */
}

.button.submit{  
  margin: 10px;
  color: white;
   background: green; 
}

.view{
  margin: 10px;
}
